{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "skipDefaultLibCheck": false,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@helpers/*": ["helpers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["type.d.ts"]
}
